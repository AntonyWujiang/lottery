div.box.box-default(style="position:absolute;top:10%;left:30%;right:10%;width:60%;text-align:center")
    div.box-header.with-border
        h3.box-title 签到人数统计

    div.box-body
        div.row
            div.col-md-8
                div.chart-responsive
                    canvas#pieChart(height="150")
            div.col-md-4
                ul.chart-legend.clearfix
                    li
                        i.fa.fa-circle-o.text-green 已签到人数
                        p#signed
                    li
                        i.fa.fa-circle-o.text-gray 未签到人数
                        p#unsigned
                    li
                        i.fa.fa-circle-o.text-black 总人数
                        p#sum
